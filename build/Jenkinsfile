pipeline {
    agent any 
    stages {
        stage('setup') {
            agent {
                docker { image 'python:3.7.3-stretch' }
            }
            steps {
                sh '''
                    make setup
                    . ./venv/bin/activate
                '''
            }
        }
        stage('install dependencies') {
            agent {
                docker { image 'python:3.7.3-stretch' }
            }
            steps {
                sh 'make install'
            }
        }
        stage('lint python code') {
            agent {
                docker { image 'python:3.7.3-stretch' }
            }
            steps {
                sh 'make lint'
            }
        }
    }
}