pipeline {
    agent any 
    stages {
        stage('setup') {
            agent {
                docker { image 'python:3.7.3-stretch' }
            }
            steps {
                sh '''
                    echo "jenkins sucks that much..."
                    make setup
                '''
            }
        }
        stage('install dependencies') {
            agent {
                docker { image 'python:3.7.3-stretch' }
            }
            steps {
                sh '''
                    source ./venv/bin/activate
                    make install
                '''
            }
        }
        stage('lint python code') {
            agent {
                docker { image 'python:3.7.3-stretch' }
            }
            steps {
                sh '''
                    source ./venv/bin/activate'
                    make lint
                '''
            }
        }
    }
}