pipeline {
    agent any 
    stages {
        stage('setup') {
            agent {
                docker { image 'python:3.7.3-stretch' }
            }
            steps {
                sh 'make setup'
            }
        }
        stage('install dependencies') {
            agent {
                docker { image 'python:3.7.3-stretch' }
            }
            steps {
                sh 'venv(make install)'
            }
        }
        stage('lint python code') {
            agent {
                docker { image 'python:3.7.3-stretch' }
            }
            steps {
                sh 'venv(make lint)'
            }
        }
    }
}

def venv(String script) {
    sh "source venv/bin/activate && " + script
}