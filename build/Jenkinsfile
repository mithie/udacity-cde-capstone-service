pipeline {
    agent any 
    stages {
        stage('setup') {
            agent {
                docker { image 'python:3.7.3-stretch' }
            }
            steps {
                sh '''
                    echo "jenkins sucks that much..."
                    #make setup
                '''
            }
        }
        stage('install dependencies') {
            agent {
                docker { image 'python:3.7.3-stretch' }
            }
            steps {
                sh 'make setup'
                sh 'source ./venv/bin/activate && pip install --upgrade pip'
            }
        }
        stage('lint python code') {
            agent {
                docker { image 'python:3.7.3-stretch' }
            }
            steps {
                sh '. ./venv/bin/activate'
                sh 'make lint'
            }
        }
    }
}